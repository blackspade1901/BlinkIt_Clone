<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBE0B"
    tools:context=".SplashFragment">

    <!-- Vertical layout to hold all views centered -->
    <LinearLayout
        android:id="@+id/centerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Blinkit title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBlink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blink"
                android:textColor="#000000"
                android:textSize="78sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvIt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/it"
                android:textColor="#2E7D32"
                android:textSize="78sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Tagline -->
        <TextView
            android:id="@+id/tvTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/india_s_last_minute_app"
            android:textSize="19.5sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"/>

        <!-- Divider line -->
        <View
            android:layout_width="234dp"
            android:layout_height="2.6dp"
            android:background="#787777"
            android:layout_marginTop="20dp" />

        <!-- Zomato Company text -->
        <TextView
            android:id="@+id/tvZomato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a_zomato_company"
            android:textColor="#000000"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginTop="24dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
